{
  "name": "saavyshopper",
  "displayName": "Saavyshopper",
  "version": "0.0.1",
  "description": "track prices to see when they are on sale",
  "author": "ankur ahir",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@nextui-org/react": "^1.0.0-beta.13",
    "firebase": "9.23.0",
    "plasmo": "0.80.0",
    "puro": "^0.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "^2.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.239",
    "@types/node": "20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "prettier": "2.8.8",
    "typescript": "5.1.6"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "identity",
      "tabs",
      "webRequest",
      "webRequestBlocking"
    ],
    "oauth2": {
      "client_id": "$PLASMO_PUBLIC_FIREBASE_CLIENT_ID",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    }
  }
}
